@model ITI_Project.BLL.ModelVM.CreateProductVM

@{
    ViewData["Title"] = "Create";
    ViewData["HideHeaderFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <p class="text-brown text-center" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #865439; margin-top: auto;"><b> Create Product</b></p>

    <div class="col-md-6 p-4 shadow-sm rounded">
        <form asp-action="Create" style="border: none; padding: 20px;">
            <!-- No background color for form -->
            <div asp-validation-summary="ModelOnly" class="text-dark-brown"></div>
            <div class="form-group mb-4 ">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="Name" class="control-label text-darker-brown"></label></b>
                <input asp-for="Name" placeholder="Enter Name" class="form-control transparent-input border-dark-brown " autocomplete="off" />
                <span asp-validation-for="Name" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="Image" class="control-label text-darker-brown"></label></b>
                <input asp-for="Image" placeholder="Add Image" class="form-control transparent-input border-dark-brown" type="file" autocomplete="off" />
                <span asp-validation-for="Image" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="Description" class="control-label text-darker-brown"></label></b>
                <input asp-for="Description" placeholder="Write Description For Product" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Description" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="Available" class="control-label text-darker-brown"></label></b>
                <input asp-for="Available" placeholder="Available or Not" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Available" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="Quantity" class="control-label text-darker-brown"></label></b>
                <input asp-for="Quantity" placeholder="Available or Not" class="form-control transparent-input border-dark-brown" type="number" autocomplete="off" />
                <span asp-validation-for="Quantity" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="Price" class="control-label text-darker-brown"></label></b>
                <input asp-for="Price" placeholder="Enter The Price $" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Price" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="Category" class="control-label text-darker-brown"></label></b>
                <input asp-for="Category" placeholder="Add Category" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Category" class="text-dark-brown"></span>
            </div>

            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <b><label asp-for="VendorID" class="control-label text-darker-brown"></label></b>
                <input asp-for="VendorID" placeholder="To which vendor" class="form-control transparent-input border-dark-brown" type="number" autocomplete="off" />
                <span asp-validation-for="VendorID" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <!-- Added margin-bottom for spacing -->
                <input class="button1" type="submit" value="ADD" />
            </div>

        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" asp-controller="Home" class="button2">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

