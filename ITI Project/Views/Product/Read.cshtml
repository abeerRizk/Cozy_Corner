@model IEnumerable<ITI_Project.BLL.ModelVM.GetProductVM>

@{
    ViewData["Title"] = "Product View";
    ViewData["HideHeaderFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navigation Bar -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<nav class="navbar navbar-expand-lg navbar-light bg-brown w-100">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="#">Furniture Store</a>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item dropdown custom-dropdown">
                    <a class="navbar-brand text-light dropdown-toggle d-flex align-items-center" href="#" id="myAccountDropdown" role="button">
                        <i class="fa fa-user-circle" aria-hidden="true"></i> My Account
                    </a>
                    <ul class="dropdown-menu dropdown-custom" aria-labelledby="myAccountDropdown">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Search Bar -->
<div class="container mt-5"> <!-- Added extra margin here -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search for products" aria-label="Search" aria-describedby="button-search">
                <button class="btn btn-outline-secondary" type="button" id="button-search">Search</button>
            </div>
        </div>
    </div>
</div>

<!-- Category Filters -->
<div class="container">
    <div class="d-flex justify-content-center mb-3">
        <button class="btn btn-brown">Chairs</button>
        <button class="btn btn-link">Tables</button>
        <button class="btn btn-link">Beds</button>
        <button class="btn btn-link">Others</button>
    </div>
</div>

<!-- Product Cards -->
<div class="container mt-4">
    <div class="row" id="productContainer">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                        <div class="col-md-4 product-block" data-category="@product.Category">
                            <div class="card mb-3">
                                <img src="@product.Image" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p><strong>Price:</strong> @product.Price</p>
                                    <a href="#" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
            }
        }
        else
        {
                <p>No products available.</p>
        }
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Navbar styles */
    .navbar {
        padding: 5px;
        width: 100%;
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        z-index: 1000;
    }

    .bg-brown {
        background-color: #865439;
    }

    .navbar-brand, .nav-link {
        font-size: 18px;
        color: #FFF8E7 !important;
    }

        .nav-link:hover, .dropdown-item:hover {
            color: #FFF8E7 !important;
            background-color: #654321 !important;
        }

    /* Extra margin to push content below the fixed navbar */
    .container.mt-5 {
        margin-top: 100px; /* Adjust this value based on your navbar height */
    }

    /* Category button styles */
    .btn-brown {
        background-color: #8B4513;
        color: white;
    }

    .btn-link {
        color: #674636;
        text-decoration: none;
    }

    /* Product card styles */
    .product-block {
        margin-bottom: 20px;
    }
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
    }
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }
    .card-text {
        color: #555;
    }

    /* Search bar styles */
    .input-group.mb-3 input {
        border-radius: 5px;
    }

    /* Navigation pills for categories */
    .nav-pills .nav-link {
        background-color: #C89595;
        color: white;
        border-radius: 5px;
        margin: 0 5px;
    }
    .nav-pills .nav-link.active {
        background-color: #674636;
    }
</style>
