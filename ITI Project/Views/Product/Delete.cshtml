@model ITI_Project.BLL.ModelVM.GetProductVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
@* <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> *@


<div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-6 p-4 shadow-sm rounded">
        <p class="text-brown text-center" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #674636;"> <b>Delete Product</b> <span class="glyphicon glyphicon-trash"></span></p>
        <form asp-action="Delete" style="border: none; padding: 20px;">
            <div asp-validation-summary="ModelOnly" class="text-dark-brown"></div>


            <div class="form-group mb-4">
                <label asp-for="Name"  class="control-label text-darker-brown"></label>
                <input asp-for="Name" placeholder="Edit Name Of Product" readeonly class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
            </div>


            <div class="form-group mb-4">
                <label asp-for="Price" class="control-label text-darker-brown">Price <i class='fas fa-dollar-sign'></i></label>
                <input asp-for="Price" placeholder="Edit Price Of Product" readeonly class="form-control transparent-input border-dark-brown" type="number" autocomplete="off" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Category"  class="control-label text-darker-brown"></label>
                <input asp-for="Category" placeholder="Edit The Category Of Product" readeonly class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
            </div>


       

            <div class="form-group mb-4">
                <button type="submit" class="button1 w-100">Delete  <span class="glyphicon glyphicon-trash"></button>
            </div>

            <a asp-action="VendorGallery" asp-controller="Product" class="button1 w-100">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

