@model ITI_Project.BLL.ModelVM.GetProductVM

@{
    ViewData["HideHeaderFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Fixed Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-brown fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="#">Furniture Store</a>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item dropdown custom-dropdown">
                    <a class="navbar-brand text-light dropdown-toggle d-flex align-items-center" href="#" id="myAccountDropdown" role="button">
                        <i class="fa fa-user-circle" aria-hidden="true"></i> My Account
                    </a>
                    <ul class="dropdown-menu dropdown-custom" aria-labelledby="myAccountDropdown">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content: Product Card -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Product Image on the left -->
        <div class="col-md-6">
            <img src="~/ImgProduct/Profile/@Model.Image" class="img-fluid product-img" alt="@Model.Name">
        </div>

        <!-- Product Details and Order Form on the right -->
        <div class="col-md-6">
            <div class="product-details">
                <h2>@Model.Name</h2>
                <p>@Model.Description</p>
                <p><strong>Price:</strong> $@Model.Price</p>

                <form asp-action="AddToCart" asp-controller="Order" method="post" class="mt-4">
                    <input type="hidden" name="ProductId" value="@Model.Id" /> <!-- Pass Product ID -->
                    
                    <input type="hidden" name="UnitPrice" value="@Model.Price" /> <!-- Pass Product Price -->

                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" class="form-control" id="quantity" name="Quantity" min="1" value="1" required />
                    </div>

                    <div class="form-group">
                        <label for="totalPrice">Total Price</label>
                        <input type="text" class="form-control" id="totalPrice" readonly value="@Model.Price" />
                    </div>

                    <button type="submit" class="btn btn-success">Add to Cart</button>
                </form>

            </div>
        </div>
    </div>
</div>

<!-- Additional CSS -->
<style>
    /* Navbar Styling */
    .navbar {
        padding: 10px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

    .bg-brown {
        background-color: #865439;
    }

    .navbar-brand, .nav-link {
        font-size: 18px;
        color: #FFF8E7 !important;
    }

        .nav-link:hover, .dropdown-item:hover {
            color: #FFF8E7 !important;
            background-color: #654321 !important;
        }

    /* Main Content Styling */
    body {
        background-color: #FFFBF5; /* Light beige */
        padding-top: 80px; /* Adjust to prevent overlap by navbar */
    }

    .product-img {
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .product-details {
        padding-left: 20px;
    }

        .product-details h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #674636;
        }

        .product-details p {
            font-size: 1.2rem;
            color: #555;
        }

    .btn {
        font-size: 1.25rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn-success {
        font-size: 1.2rem;
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        border: none;
        border-radius: 5px;
    }

        .btn-success:hover {
            background-color: #218838;
            color: white;
        }
</style>

@section Scripts {
    <script>
        // Dynamically calculate the total price based on quantity entered
        document.getElementById('quantity').addEventListener('input', function () {
            const unitPrice = parseFloat('@Model.Price');
            const quantity = parseInt(this.value);
            if (!isNaN(quantity) && quantity > 0) {
                const totalPrice = unitPrice * quantity;
                document.getElementById('totalPrice').value = totalPrice.toFixed(2);
            } else {
                document.getElementById('totalPrice').value = unitPrice.toFixed(2);
            }
        });
    </script>
}
