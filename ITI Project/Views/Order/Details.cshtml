@model ITI_Project.BLL.ModelVM.OrderModelVM

@{
    ViewData["Title"] = "Order Details";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
@* <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> *@


<div class="order-container">
    <p class="text-brown text-center" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #674636;"> <b>Your Orders</b> <i class='far fa-edit'></i></p>
    @if (@Model == null || @Model.Items == null || Model.Items.Count == 0)
{
        <p style="color: #674636">You did not order anything yet! </p>
    }else
{
 
    <p style="color: #674636"><strong> Order Date <i class='fas fa-calendar-alt'></i>:</strong> @Model.OrderDate </p>
    <table class="base-table ">
        <thead>
            <tr> 
                <th class="Customer-Items">
                    Order Items <i class='fas fa-cart-arrow-down'></i> :
                </th>
           </tr>
        </thead>
        <tbody>
            <tr>
              
                <td>
                    <table class="nested-table">
                        <thead>
                            <tr>
                                <th>Prodcut Name :</th>
                                <th> Unit Price <i class='fas fa-dollar-sign'></i> :</th>
                                <th> Quantity :</th>
                                <th> Total Price <i class='fas fa-dollar-sign'></i>  :</th>
                                <th>Delete Item  <span class="glyphicon glyphicon-trash"></span> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Items in Model.Items)
                            {
                                <tr>
                                    <td>
                                        @Items.ProductName
                                    </td>
                                    <td>
                                        @Items.UnitPrice <i class='fas fa-dollar-sign'></i>
                                    </td>
                                    <td>
                                        @Items.Quantity
                                    </td>
                                    <td>
                                        @Items.TotalPrice <i class='fas fa-dollar-sign'></i>
                                    </td>
                                    <td>
                                        <button onclick="window.location.href='@Url.Action("RemoveOrderFromCart", "Order", Items)'" class="button1 w-100">Delete  <span class="glyphicon glyphicon-trash"></span> </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>

            </tr>

        </tbody>
    </table>
    <center><button class="button2  mt-3" onclick="window.location.href='@Url.Action("EmptyTheCart", "Order")'">Delete  <span class="glyphicon glyphicon-trash"></span> </button>
        <button class="button2  mt-3" onclick="window.location.href='@Url.Action("ConfirmOrder", "Order" , new { id = @Model.Id })'"> Confirm   </button>
    </center>
}
</div>


<style>
   
    body {
        background-color: #FFFBF5;
        padding-top: 70px;
    }

    .order-container {
        max-width: 100%;
        background-color: #F7EFE5;
        margin: 50px auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .base-table {
        width: 100%;
        border-color: #674636;
    }

        .base-table th, .base-table td {
            border: 1px solid #ccc;
            height: auto;
            background-color: #F7EFE5;
            padding: 10px;
            text-align: left;
            color: #674636;
        }



        .base-table td {
            border: 1px solid #ccc;
            background-color: #FCFAEE;
            padding: 10px;
            text-align: left;
        }

    /* Nested table styling */
    .nested-table {
        width: 100%;
        border-color: #674636;
        border-radius: 60px;
    }

        .nested-table th .nested-table td {
            border: 1px solid #ccc;
            background-color: #F7EFE5;
            border-radius: 60px;
            padding: 10px;
            text-align: left;
            color: #674636;
        }

        .nested-table td {
            border: 1px solid #ccc;
            background-color: #FCFAEE;
            padding: 10px;
            text-align: left;
        }


    .button1 {
        background-color: #dfbe9f;
        color: #734d26;
        padding: 8px 12px;
        text-align: center;
        font-weight: bold;
        display: inline-block;
        font-size: 15px;
        width: 85px;
        border-radius: 100px;
        border: none;
    }

        .button1:hover {
            box-shadow: 0 6px 8px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
            transition: all 0.3s ease;
            text-decoration: none;
        }

    .button2 {
        
        background-color: #dfbe9f;
        align-content: center;
        align-self:center;
        color: #734d26;
        padding: 10px 32px;
        text-align: center;
        font-weight: bold;
        display: inline-block;
        font-size: 20px;
        width: 285px;
        border-radius: 3000px;
        border: none;
    }

        .button2:hover {
            box-shadow: 0 6px 8px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
            transition: all 0.3s ease;
        }

</style>