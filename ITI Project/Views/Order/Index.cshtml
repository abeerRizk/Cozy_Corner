        }



        .base-table td {
            border: 1px solid #ccc;
            background-color: #FCFAEE;
            padding: 10px;
            text-align: left;
        }

    /* Nested table styling */
    .nested-table {
        width: 100%;
        border-color: #674636;
        border-radius:60px;
    }
           .nested-table th .nested-table td{
            border: 1px solid #ccc;
