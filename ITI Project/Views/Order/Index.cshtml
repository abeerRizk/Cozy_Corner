@model IEnumerable<ITI_Project.BLL.ModelVM.OrderModelVM>

@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";

}


@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="order-container">
    <p class="text-brown text-center" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #674636;"> <b>Orders</b> <i class='far fa-edit'></i></p>

    <table class="base-table">
        <thead>
            <tr>
                <th class="Customer-Name">
                 Customer Name : 
             </th>
                <th class="Order-Date">
                    Order Date <i class='fas fa-calendar-alt'></i> :
                </th>
                <th class="Customer-Location">
                    Customer Location <i class="material-icons" style="width:20px">add_location</i> :
                </th>
                <th class="Customer-Items">
                    Order Items <i class='fas fa-cart-arrow-down'></i> :
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.CustomerName
                        Customer

                    </td>
                    <td>
                        @item.OrderDate
                    </td>
                    <td>
                        @item.ShippingAddress
                        Dammita
                    </td>
                    <td>
                        <table class="nested-table">
                            <thead>
                                <tr>
                                    <th>Prodcut Name :</th>
                                    <th> Price <i class='fas fa-dollar-sign'></i> :</th>
                                    <th> Quantity :</th>
                                    <th> Total Price <i class='fas fa-dollar-sign'></i>  :</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var Items in item.Items)
                                {
                                    <tr>
                                        <td>
                                            @Items.ProductName
                                        </td>
                                        <td>
                                            @Items.UnitPrice <i class='fas fa-dollar-sign'></i>
                                        </td>
                                        <td>
                                            @Items.Quantity
                                        </td>
                                        <td>
                                            @Items.TotalPrice <i class='fas fa-dollar-sign'></i>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                    
                    
                      

                </tr>
            }
        </tbody>
</table>
</div>


<style>
    .navbar {
        padding: 5px;
        width: 100%;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        z-index: 1000;
    }

    .bg-brown {
        background-color: #865439;
    }

    .navbar-brand, .nav-link {
        font-size: 18px;
        color: #FFF8E7 !important;
    }

        .nav-link:hover, .dropdown-item:hover {
            color: #FFF8E7 !important;
            background-color: #654321 !important;
        }

    body {
        background-color: #FFFBF5;
        padding-top: 70px;
    }

    .order-container {
        max-width: 100%;
        background-color: #F7EFE5;
        margin: 50px auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .base-table {
        width: 100%;
        border-color: #674636;
    }

        .base-table th, .base-table td {
            border: 1px solid #ccc;
