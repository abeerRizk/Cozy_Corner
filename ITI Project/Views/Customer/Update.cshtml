@model ITI_Project.BLL.ModelVM.UpdateCustomerVM

@{
    ViewData["Title"] = "Update";
    ViewData["HideHeaderFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<nav class="navbar navbar-expand-lg navbar-light bg-brown w-100">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="#">Furniture Store</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav" >
            <!-- Other navbar items can go here (if any) -->

            <!-- Right-aligned icons and dropdown -->
            <ul class="navbar-nav ms-auto d-flex align-items-center ">
                <!-- Favorite Icon -->
                <li class="nav-item">
                    <a class="nav-link text-light d-flex align-items-center" href="@Url.Action( "FavoriteProducts" , "Favorites" )" title="Favorite Products">
                        <i class="fa fa-heart" aria-hidden="true" style="font-size: 24px;"></i>
                    </a>
                </li>

                <!-- Cart Icon -->
                <li class="nav-item mx-2">
                    <a class="nav-link text-light d-flex align-items-center" href="@Url.Action("Details", "Order")" title="View Cart">
                        <i class="fa fa-shopping-cart" aria-hidden="true" style="font-size: 24px;"></i>
                    </a>
                </li>

                <!-- My Account Dropdown -->
                <li class="nav-item dropdown custom-dropdown mx-2">
                
                            <a class="navbar-brand text-light dropdown-toggle d-flex align-items-center" href="#" id="myAccountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user-circle" aria-hidden="true"></i> @User.Identity.Name
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-custom" aria-labelledby="myAccountDropdown">
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                            </div>
      
     
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-6 p-4 shadow-sm rounded">
        <p class="text-brown text-center" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #674636;"> <b>Edit Your Profile</b> <i class="fas fa-marker"></i></p>
        <form asp-action="Update" style="border: none; padding: 20px;">
            <div asp-validation-summary="ModelOnly" class="text-dark-brown"></div>


            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label text-darker-brown"></label>
                <input asp-for="Name" placeholder="Edit Your Name" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Name" class="text-dark-brown"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Age" class="control-label text-darker-brown"></label>
                <input asp-for="Age" placeholder="Edit Your Age" class="form-control transparent-input border-dark-brown" type="number" autocomplete="off" />
                <span asp-validation-for="Age" class="text-dark-brown"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Phone_Number" class="control-label text-darker-brown"> Phone Number <span class="glyphicon glyphicon-earphone"></span></label>
                <input asp-for="Phone_Number" placeholder="Edit Your Phone Number" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Phone_Number" class="text-dark-brown"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Location" class="control-label text-darker-brown"> Location <i class="material-icons" style="font-size:20px">add_location</i></label>
                <input asp-for="Location" placeholder="Edit Your Location" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Location" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <button type="submit" class="button1 w-100">Edit <i class="fas fa-marker" style="font-size:20px"></i></button>
            </div>

            <a asp-action="Index" asp-controller="Home" class="button1 w-100">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

