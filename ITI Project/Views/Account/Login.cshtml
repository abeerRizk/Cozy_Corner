    }

    .bg-brown {
        background-color: #865439;
    }

    .navbar-brand, .nav-link {
        font-size: 18px;
    }

        .nav-link:hover {
            color: #FFF8E7 !important;
        }

    .create-account-heading {
        margin-top: 0;
        font-size: 24px;
    }

    .form-section {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .button1 {
        background-color: #865439;
        border: none;
        color: #FFF8E7;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        padding: 10px 20px;
        font-size: 14px;
