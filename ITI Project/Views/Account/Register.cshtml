@model ITI_Project.BLL.ModelVM.RegisterUserVM

@{
    ViewData["Title"] = "Register";
    ViewData["HideHeaderFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-brown w-100">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="#">Furniture Store</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link text-light" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="#">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="blurred-background">
    <!-- Register Form -->
    <div class="form-section d-flex justify-content-center align-items-center">
        <div class="col-md-5 p-4 shadow-sm rounded form-container" style="padding-top:0px; margin-bottom:0px">
            <p class="text-brown text-center create-account-heading" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #865439;">Create An Account</p>
            <form asp-action="Register" asp-controller="Account" style="border: none; padding-left:15px; padding-right:15px; margin-top:5px;">
                <div asp-validation-summary="ModelOnly" class="text-dark-brown"></div>
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="control-label text-darker-brown"></label>
                    <input asp-for="UserName" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label text-darker-brown"></label>
                    <input asp-for="Password" class="form-control transparent-input border-dark-brown" type="password" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="control-label text-darker-brown"></label>
                    <input asp-for="ConfirmPassword" class="form-control transparent-input border-dark-brown" type="password" autocomplete="off" />
                    <span asp-validation-for="ConfirmPassword" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label text-darker-brown"></label>
                    <input asp-for="Address" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="Address" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label text-darker-brown"></label>
                    <input asp-for="Email" class="form-control transparent-input border-dark-brown" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="text-darker-brown">Are you registering as:</label>
                    <div class="form-check">
                        <input asp-for="IsVendor" class="form-check-input transparent-input" type="radio" value="true" id="vendorOption" />
                        <label class="form-check-label text-darker-brown" for="vendorOption">Vendor</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsVendor" class="form-check-input transparent-input" type="radio" value="false" id="clientOption" />
                        <label class="form-check-label text-darker-brown" for="clientOption">Client</label>
                    </div>
                    <span asp-validation-for="IsVendor" class="text-dark-brown"></span>
                </div>
                <div class="form-group mb-4">
                    <input class="button1 w-100" type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>


</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

