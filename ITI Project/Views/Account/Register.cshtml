@model ITI_Project.BLL.ModelVM.RegisterUserVM 

@{ 
    ViewData["Title"] = "Register";
    ViewData["HideHeaderFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml"; 
} 


<div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <p class="text-brown text-center" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #865439; margin-top: 10px;">Create An Account</p>

    <div class="col-md-6 p-4 shadow-sm rounded"> 
        <form asp-action="Register" style="border: none; padding: 20px;"> <!-- No background color for form -->
            <div asp-validation-summary="ModelOnly" class="text-dark-brown"></div> 
            <div class="form-group mb-4 "> <!-- Added margin-bottom for spacing -->
                <label asp-for="UserName" class="control-label text-darker-brown"></label> 
                <input asp-for="UserName" class="form-control transparent-input border-dark-brown " autocomplete="off"/> 
                <span asp-validation-for="UserName" class="text-dark-brown"></span> 
            </div> 
            <div class="form-group mb-4"> <!-- Added margin-bottom for spacing -->
                <label asp-for="Password" class="control-label text-darker-brown"></label> 
                <input asp-for="Password" class="form-control transparent-input border-dark-brown" type="password" autocomplete="new-password" /> 
                <span asp-validation-for="Password" class="text-dark-brown"></span> 
            </div> 
            <div class="form-group mb-4"> <!-- Added margin-bottom for spacing -->
                <label asp-for="ConfirmPassword" class="control-label text-darker-brown"></label> 
                <input asp-for="ConfirmPassword" class="form-control transparent-input border-dark-brown" type="password" autocomplete="new-password" /> 
                <span asp-validation-for="ConfirmPassword" class="text-dark-brown"></span> 
            </div> 
            <div class="form-group mb-4"> <!-- Added margin-bottom for spacing -->
                <label asp-for="Address" class="control-label text-darker-brown"></label> 
                <input asp-for="Address" class="form-control transparent-input border-dark-brown"autocomplete="off" /> 
                <span asp-validation-for="Address" class="text-dark-brown"></span> 
            </div> 
            <div class="form-group mb-4"> <!-- Added margin-bottom for spacing -->
                <label asp-for="Email" class="control-label text-darker-brown"></label> 
                <input asp-for="Email" class="form-control transparent-input border-dark-brown"autocomplete="off" /> 
                <span asp-validation-for="Email" class="text-dark-brown"></span> 
            </div> 
            <!-- Role Selection: Vendor or Client -->
            <div class="form-group mb-4"> <!-- Added margin-bottom for spacing -->
                <label class="text-darker-brown">Are you registering as:</label> 
                <div class="form-check"> 
                    <input asp-for="IsVendor" class="form-check-input transparent-input" type="radio" value="true" id="vendorOption" /> 
                    <label class="form-check-label text-darker-brown" for="vendorOption">Vendor</label> 
                </div> 
                <div class="form-check"> 
                    <input asp-for="IsVendor" class="form-check-input transparent-input" type="radio" value="false" id="clientOption" /> 
                    <label class="form-check-label text-darker-brown" for="clientOption">Client</label> 
                </div> 
                <span asp-validation-for="IsVendor" class="text-dark-brown"></span> 
            </div> 
            <div class="form-group mb-4"> <!-- Added margin-bottom for spacing -->
               <input  class="button1" type="submit" value="Create"  /> 
           </div>

        </form> 
    </div>
</div> 

<div class="text-center mt-3"> 
    <a asp-action="Index" class="text-brown">Back to List</a> 
</div> 

@section Scripts { 
    @await Html.PartialAsync("_ValidationScriptsPartial") 
}

