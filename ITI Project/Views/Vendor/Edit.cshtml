@model ITI_Project.BLL.ModelVM.UpdateVendorVM

@{
    ViewData["Title"] = "Edit";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-6 p-4 shadow-sm rounded">
        <p class="text-brown text-center" style="font-family: 'Times New Roman', serif; font-size: 30px; color: #674636;"> <b>Edit Vendor</b> <i class="fas fa-marker"></i></p>
        <form asp-action="Edit" style="border: none; padding: 20px;">
            <div asp-validation-summary="ModelOnly" class="text-dark-brown"></div>


            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label text-darker-brown"></label>
                <input asp-for="Name" placeholder="Edit Name Of Product" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Name" class="text-dark-brown"></span>
            </div>


            <div class="form-group mb-4">
                <label asp-for="Age" class="control-label text-darker-brown"></label>
                <input asp-for="Age" placeholder="Edit Age of Vendor " class="form-control transparent-input border-dark-brown" type="number" autocomplete="off" />
                <span asp-validation-for="Age" class="text-dark-brown"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Phone_Number" class="control-label text-darker-brown"> Phone Number <i class='fas fa-phone'></i></label>
                <input asp-for="Phone_Number" placeholder="Edit Your Phone Number" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Phone_Number" class="text-dark-brown"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Location" class="control-label text-darker-brown"> Location <i class="material-icons" style="font-size:20px">add_location</i></label>
                <input asp-for="Location" placeholder="Edit Location Of Vendor" class="form-control transparent-input border-dark-brown" type="text" autocomplete="off" />
                <span asp-validation-for="Location" class="text-dark-brown"></span>
            </div>


            <div class="form-group mb-4">
                <button type="submit" class="button1 w-100">Edit <i class="fas fa-marker"></i></button>
            </div>

            <a asp-action="Index" asp-controller="Home" class="button1 w-100">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>

    .button1 {
        background-color: #dfbe9f;
        color: #734d26;
        padding: 10px 32px;
        text-align: center;
        font-weight: bold;
        display: inline-block;
        font-size: 20px;
        width: 485px;
        border-radius: 30px;
        border: none;
    }

        .button1:hover {
            box-shadow: 0 6px 8px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
            transition: all 0.3s ease;
            text-decoration: none;
        }


    body {
        background-color: #FFFBF5; /* Light beige */
        padding-top: 100px;
    }

    .text-brown {
        color: #674636; /* Dark brown for headings */
    }

    .text-darker-brown {
        color: #674636; /* Darker brown for labels */
    }

    .text-dark-brown {
        color: #674636; /* Dark brown for validation text */
    }

    .border-dark-brown {
        border-color: #674636; /* Dark brown border */
    }

    .transparent-input {
        background-color: #F7EFE5; /* Cream background */
        color: #674636; /* Dark brown text */
        border-radius: 10px; /* Rounded corners */
        border: none;
        transition: background-color 0.3s ease;
    }

        .transparent-input:focus {
            background-color: #F7EFE5; /* Maintain the cream background on focus */
            color: #674636;
            outline: none;
            box-shadow: none;
            border: solid 0.5px #674636;
        }

        .transparent-input::placeholder {
            color: #888888;
        }

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .shadow-sm {
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }




    .input-group {
        border-radius: 10px; /* Add rounded corners */
        box-shadow: none; /* Remove shadow */
        border: none; /* Remove border */
    }

    a:hover {
        color: #8B4513;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

</style>